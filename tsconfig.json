// https://www.typescriptlang.org/tsconfig
{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "baseUrl": "."
  },
  "include": ["**/*.ts"]
}
